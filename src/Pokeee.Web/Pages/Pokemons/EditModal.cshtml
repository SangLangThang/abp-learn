@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Pokeee.Localization
@using Pokeee.Web.Pages.Pokemons
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Pokeee.Pokemons;
@using System.Globalization
@inject IHtmlLocalizer<PokeeeResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Pokemons/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="Pokemon.Avatar"/>

            <abp-input asp-for="Pokemon.Name"/>

            <abp-input asp-for="Pokemon.Slot"/>

            <abp-input asp-for="Pokemon.Type"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>